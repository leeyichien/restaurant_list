<!-- ./views/edit.handlebars -->
<div class="container">
  <form action="/restaurants/{{restaurant._id}}?_method=PUT" method="POST">
    <div class="form-group row">
      <label for="formControlRange">名稱</label>
      <input type="text" placeholder="" name="name" value="{{restaurant.name}}">
    </div>
    <div class="form-group row">
      <label for="formControlRange">英文名稱</label>
      <input type="text" placeholder="" name="name_en" value="{{restaurant.name_en}}"">
      </div>
      <div class=" form-group row">
      <label for="formControlRange">類別</label>
      <input type="text" placeholder="" name="category" value="{{restaurant.category}}"">
      </div>
      <div class=" form-group row">
      <label for="formControlRange">照片連結</label>
      <input type="text" placeholder="" name="image" value="{{restaurant.image}}"">
      </div>
      <div class=" form-group row">
      <label for="formControlRange">地區</label>
      <input type="text" placeholder="" name="location" value="{{restaurant.location}}"">
      </div>
      <div class=" form-group row">
      <label for="formControlRange">電話</label>
      <input type="text" placeholder="" name="phone" value="{{restaurant.phone}}">
    </div>
    <div class="form-group row">
      <label for="formControlRange">google map</label>
      <input type="text" placeholder="" name="google_map" value="{{restaurant.google_map}}"">
      </div>
      <div class=" form-group row">
      <label for="formControlRange">評比等級</label>
      <input type="text" placeholder="" name="rating" value="{{restaurant.rating}}">
    </div>
    <div class="form-group row">
      <label for="formControlRange">詳細介紹</label>
      <textarea class="form-control" placeholder="" name="description">{{restaurant.description}}</textarea>
    </div>
    <div class="form-group row">
      <button type="submit">Edit</button>
    </div>
  </form>
</div>